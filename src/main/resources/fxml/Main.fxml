<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="400.0"
	xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.nubeclick.pos.view.Login">
	<children>
		<ImageView fitHeight="150.0" fitWidth="200.0" layoutX="98.0"
			layoutY="97.0" pickOnBounds="true" preserveRatio="true">
			<image>
				<Image url="/images/Nube.png" />
			</image>
		</ImageView>
		<JFXTextField fx:id="txtLogin" focusColor="#007bff"
			labelFloat="true" layoutX="133.0" layoutY="380.0" promptText="Login"
			unFocusColor="#007bff" />
		<JFXPasswordField fx:id="txtPwd" focusColor="#007bff"
			labelFloat="true" layoutX="133.0" layoutY="435.0" promptText="Password"
			unFocusColor="#007bff" />
		<FontAwesomeIconView fill="#007bff" glyphName="USER"
			layoutX="101.0" layoutY="402.0" size="24" stroke="TRANSPARENT" />
		<FontAwesomeIconView fill="#007bff" glyphName="KEY"
			layoutX="98.0" layoutY="457.0" size="24" stroke="#12121200" />
		<JFXButton id="crud-save" fx:id="btnLogin" buttonType="RAISED"
			layoutX="160.0" layoutY="495.0" onAction="#login" ripplerFill="WHITE"
			text="Login" textFill="WHITE" />
	</children>
</AnchorPane>
